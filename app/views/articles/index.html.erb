<div style="margin-bottom: 20px;">
  <% if user_signed_in? %>
    <%= button_to "Sair", destroy_user_session_path, method: :delete %>
  <% else %>
    <%= link_to "Cadastrar", new_user_registration_path, class: "btn btn-primary" %>
    <%= link_to "Login", new_user_session_path, class: "btn btn-secondary", style: "margin-left: 10px;" %>
  <% end %>
</div>

<h1>Articles</h1>

Este blog tem <%= Article.public_count %> artigos e contando!

<ul>
  <% @articles.each do |article| %>
    <% unless article.archived? %>
      <li>
        <%= link_to article.title, article %>
      </li>
    <% end %>
  <% end %>
</ul>

<% if user_signed_in? %>
  <%= link_to "Novo Artigo", new_article_path, class: "btn btn-success" %>
<% end %>